@{
    ViewBag.Title = "Home Page";
    string nuevaCookie = (string)ViewBag.nuevaCookie;
    string apple = (string)ViewBag.nuevaCookie;
    string dell = (string)ViewBag.nuevaCookie;
    string lenevo = (string)ViewBag.nuevaCookie;
