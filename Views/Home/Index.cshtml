        <br />
        <input type="checkbox" name="lenevo" value="Lenevo" />
        <label>Lenevo</label>
        <br />
        <input type="checkbox" name="acer" value="Acer" />
        <label>Acer</label>
        <br />
        <input type="checkbox" name="sony" value="Sony" />
        <label>Sony</label>
        <br />
        <input type="checkbox" name="wipro" value="Wipro" />
